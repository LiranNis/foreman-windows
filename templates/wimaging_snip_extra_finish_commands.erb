<%#
kind: snippet
name: Wimaging extraFinishCommands
oses:
- Windows Server 2008
- Windows Server 2008 R2
- Windows Server 2012
- Windows Server 2012 R2
- Windows
# Extra commands run at the end of the finish script. Do not change the snippet name
# make commands are executed synchronously. Otherwise they might get interrupted by reboot later on
%>
<%
  # safemode renderer does not support unary negation
  pm_set = @host.puppetmaster.empty? ? false : true
  puppet_enabled = pm_set || @host.params['force-puppet'] && @host.params['force-puppet'] == 'true'
%>

<% if puppet_enabled %>
  echo Installing puppet
  start /w "" msiexec /qn /i C:\extras\puppet.msi PUPPET_AGENT_STARTUP_MODE=Manual PUPPET_MASTER_SERVER=<%= @host.puppetmaster -%> PUPPET_AGENT_ACCOUNT_DOMAIN=<%= @host.domain -%> PUPPET_AGENT_ACCOUNT_USER=administrator PUPPET_AGENT_ACCOUNT_PASSWORD="<%= @host.params['domainAdminAccountPassword'] -%>"
  echo set puppet to auto start
  sc config puppet start= auto
  sc query puppet
  rem this is rather hacky
  rem call "C:\Program Files\Puppet Labs\Puppet\bin\puppet.bat" agent -t -v --tags no_such_tag
<% end -%>

<% if @host.params['runRundeck'] -%>
  <% builtArg = @host.params['rundeckBuilt'] ? "-built_url " + foreman_url('built') : "" %>
  <% sendToNul = @host.params['foremanDebug'] ? "" : "--quiet" %>
  echo Calling rundeck to run playbook
  wget --no-check-certificate --post-data="" "<%= @host.params['rundeckURL'] %>/api/1/job/<%= @host.params['rundeckJobId'] %>/run?authtoken=<%= @host.params['rundeckAuthToken'] %>&&argString=-hosts <%= @host.name %> <%= builtArg %> <%= @host.params['rundeckExtraArgString'] %>" --delete-after <%= sendToNul %>
<% end -%>

@echo off
